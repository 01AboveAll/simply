{{!-- Layout --}}
{{!< default}}

{{#contentFor "special_body_class"}}topic{{/contentFor}}

{{#post}}
<header class="topic-header">
    <div class="px-4 py-vw8 mx-auto max-w-3xl text-center text-white">
        <h1 class="underscore is-center capitalize text-4xl lg:text-5xl font-semibold">{{title}}</h1>
        <div class="text-lg mt-8 text-xl">{{content}}</div>
    </div>
</header>
{{/post}}

<section class="container mx-auto py-8 lg:py-16">
    <div class="max-w-1100 mx-auto">

        {{#get "tags" limit="18" filter="visibility:public" include="count.posts" order="count.posts desc"}}

        <div class="row">

            {{#foreach tags}}
            <div class="col s12 m6 l4 mb-8 flex">
                <article class="topic-story relative bg-dark overflow-hidden rounded w-full h-88">
                    {{#if feature_image}}
                    <a href="{{url}}">
                        <img class="image-inset blur-up lazyload"
                            src="{{img_url feature_image size="l"}}"
                            srcset="{{img_url feature_image size="xxs"}}"
                            data-srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w, {{img_url feature_image size="l"}} 1000w"
                            data-sizes="(max-width: 1000px) 400px, 600px"
                            alt="{{name}}"
                        />
                    </a>
                    {{else}}
                    <div class="absolute inset-0 bg-cover" style="background-image: url({{asset "images/not-image.jpg"}})"></div>
                    {{/if}}

                    <header class="absolute text-white z-4 text-center w-full px-4 lg:px-8 py-12 {{#if @even}}bottom-0{{else}}top-0{{/if}}">
                        <p class="text-sm uppercase mb-3 opacity-90 tracking-widest font-medium">{{count.posts}} {{t "Stories"}}</p>
                        <h2 class="text-32 capitalize font-semibold tracking-wide"><a href="{{url}}">{{name}}</a></h2>
                    </header>

                    <div class="absolute inset-0 z-2 bg-black bg-opacity-50"></div>
                    <a href="{{url}}" class="absolute inset-0 z-4" aria-label="{{name}}"></a>
                </article>
            </div>
            {{/foreach}}

        </div>

        {{/get}}

    </div>
</section>

<style>
.topic-header {background: url({{asset "images/bg-setup.svg"}}) bottom no-repeat,linear-gradient(60deg,#2e2ea2,#138395)}
</style>