<article class="col s12 m4 u-marginBottom20 u-relative story story{{@number}} {{^if feature_image}}not--image{{/if}}" >
    <div class="story-wrap">
        <a href="{{url}}" class="story-image--link story-image u-relative u-block u-backgroundSizeCover simply-lazy lazy" data-original="{{feature_image}}"></a>

        <section class="story-body">
            <div class="u-flex1 u-relative">
                <div class="u-flexColumnTop u-flexWrap u-overflowHidden u-absolute0 u-xs-relative">
                    <div class="u-flex0 u-sizeFullWidth">
                        <a href="{{url}}" class="">
                        <h2 class="u-contentSansBold u-lineHeightTight u-fontSize20">{{title}}</h2>
                    </a>
                    </div>

                    <a href="{{url}}">
                        <p class="u-uiTextRegular u-textColorNormal u-marginTop5 u-letterSpacingNormal u-lineClamp3 u-maxHeight3LineHeightBase u-textOverflowEllipsis u-fontSize15">{{excerpt words="12"}}</p>
                    </a>
                </div>

            </div>

            {{!-- story meta < author avtar, name, fisrt tag, datetime> --}}
            <div class="u-flex u-paddingTop10 u-flex0">

                {{#author}}
                <div class="u-flex0 u-paddingRight10" style="padding-right:10px">
                    <a href="{{url}}" style="background-image:url({{profile_image}});{{#is "post"}}height:40px;width:40px;{{/is}}" class="story-avatar--img u-block u-backgroundSizeCover u-relative {{^if profile_image}}no-avatar{{/if}}">
                        <div class="u-absolute u-accentColor--iconNormal svgIcon" style="width: calc(100% + 10px);height: calc(100% + 10px);top:-5px;left:-5px;"><svg viewBox="0 0 114 114" xmlns="http://www.w3.org/2000/svg"><path d="M7.66922967,32.092726 C17.0070768,13.6353618 35.9421928,1.75 57,1.75 C78.0578072,1.75 96.9929232,13.6353618 106.33077,32.092726 L107.66923,31.4155801 C98.0784505,12.4582656 78.6289015,0.25 57,0.25 C35.3710985,0.25 15.9215495,12.4582656 6.33077033,31.4155801 L7.66922967,32.092726 Z"></path><path d="M106.33077,81.661427 C96.9929232,100.118791 78.0578072,112.004153 57,112.004153 C35.9421928,112.004153 17.0070768,100.118791 7.66922967,81.661427 L6.33077033,82.338573 C15.9215495,101.295887 35.3710985,113.504153 57,113.504153 C78.6289015,113.504153 98.0784505,101.295887 107.66923,82.338573 L106.33077,81.661427 Z"></path></svg></div>
                    </a>
                </div>
                {{/author}}

                <div class="u-flex1 u-noWrapWithEllipsis u-xs-paddingTop5">
                    <div class="postMetaInline postMetaInline-authorLockup u-paddingLeft0 u-noWrapWithEllipsis">
                        <a href="" class="link u-textColorDarker u-fontSize13 u-baseColor--link">GodoFredo</a>
                    </div>

                    <div class="u-fontSize13 u-textColorNormal u-lineHeightTight u-noWrapWithEllipsis u-paddingTop2">
                        <time datetime="{{date format='YYYY-MM-DD'}}">{{date published_at timeago="true"}}</time>
                    </div>

                </div>

            </div>
        </section>

    </div>
</article>
