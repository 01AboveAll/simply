{{!-- Template for entry meta and date --}}
<div class="entry-byline u-paddingTop10">
    {{#author}}
    <div class="entry-avatar u-clear">
        <a href="{{url}}" style="background-image:url({{image}});{{#is "post"}}height:60px;width:60px;{{/is}}" class="entry-avatar--img u-block u-backgroundSizeCover {{^if image}}no-avatar{{/if}}"></a>
    </div>
    {{/author}}
    <div class="entry-author u-textColorNormal {{#is "tag, author"}}u-fontSize15{{else}}{{#is "post"}}u-fontSizeSmall{{else}}u-fontSizeSmaller{{/is}}{{/is}}">
        {{#author}}<a href="{{url}}">{{name}}</a>{{/author}} in {{tags limit="1"}}
        <time class="entry-date u-textColorNormal u-fontSizeSmaller u-fontWeightThin u-block u-textColorNormal" datetime="{{date format='YYYY-MM-DD'}}">{{date published_at timeago="true"}}</time>
    </div>
</div>
