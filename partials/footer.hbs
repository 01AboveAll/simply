<footer class="footer">
    <section class="mx-auto max-w-extreme px-4">
        <div class="row">
            {{!-- About --}}
            <div class="col s12 m6 l4 mb-12 md:mb-8 flexColumnTop">
                <div class="footer-items flexColumnTop flex-grow">
                    <h3 class="footer-items-title underscore text-22">{{t "About Us"}}</h3>
                    <div class="footer-b flex-grow mb-4">
                        <p class="mb-4 text-lg">{{@site.description}}</p>
                    </div>

                    {{!-- Social Media - partilas/widget/social-media.hbs --}}
                    {{> "widget/social-media" class="footer-social-media"}}
                </div>
            </div>

            {{!-- Tag Cloud --}}
            <div class="col s12 m6 l4 mb-12 md:mb-8 flexColumnTop">
                <div class="footer-items footer-tags flex-grow">
                    <h3 class="footer-items-title underscore text-22">{{t "Tags"}}</h3>
                    <div class="buttons">
                    {{#get "tags" limit="10" order="desc"}}
                        {{#foreach tags}}
                            <a href="{{url absolute="true"}}" title="{{name}}" class="button is-primary is-outlined capitalize">{{name}}</a>
                        {{/foreach}}
                    {{/get}}
                    </div>
                </div>
            </div>

            {{!-- members subscribe --}}
            {{#if @labs.members}}
            <div class="col s12 m6 l4 mb-12 md:mb-8 flexColumnTop">
                <div class="footer-items flex-grow">
                    <h3 class="footer-items-title underscore text-22">{{t "Subscribe"}}</h3>
                    <p class="mb-4">{{t "Get the best viral stories straight into your inbox!"}}</p>

                    {{!-- Form --}}
                    <form class="f-form" data-members-form="subscribe">
                        <input
                            class="f-form-input u-block subscribe-email mb-4"
                            data-members-email
                            placeholder="{{t "youremail@example.com"}}"
                            aria-label="{{t "youremail@example.com"}}"
                            aria-describedby="f-form-subscribe-btn"
                            autocomplete="off"
                            required
                        />

                        <button id="f-form-subscribe-btn" class="button button--success u-sizeFullWidth" type="submit">
                            <span class="button-text u-fontSizeBase">{{t "Subscribe"}}</span>
                            {{> "icons/loader"}}
                        </button>
                        <div class="message-success u-paddingTop15 u-hide">{{{t "<strong>Great!</strong> Check your inbox and click the link to confirm your subscription"}}}</div>
                        <div class="message-error u-paddingTop15 u-hide">{{t "Please enter a valid email address!"}}</div>
                    </form>
                </div>
            </div>
            {{/if}}

            {{!-- Copy --}}
            <div class="col s12 pt-5 text-center text-base font-medium">
                &copy; {{date format="YYYY"}} {{@site.title}}.
                Design with
                <svg class="icon animated infinite pulse" style="color:red;width:15px"><use xlink:href="#icon-heart"></use></svg>
                by
                <a href="https://godofredo.ninja" title="Developer FullStack.">@GodoFredoNinja</a>
            </div>
        </div>
    </section>
</footer>