{{!-- Header Template --}}
<header class="header u-sizeFullWidth u-relative">
    <div class="header-wrap u-flexCenter u-relative" style="height:65px">

        <div class="u-maxWidth1040 u-sizeFullWidth u-container" style="z-index:100">
            <div class="header-top-section u-flexCenter u-relative">

                <div class="u-flex--1">{{>"widget-follow"}}</div>

                {{!-- header logo --}}
                <div class="u-flex--1">
                    <a class="header-logo u-flexCenter u-relative" href="{{@blog.url}}">
                        {{#if @blog.logo}}
                            <img src="{{@blog.logo}}" alt="{{@blog.title}}"/>
                        {{else}}
                            <span class="u-fontSize36 u-fontWeightSemibold">{{@blog.title}}</span>
                        {{/if}}
                    </a>
                </div>

                <div class="u-flex--1 u-flex u-flexEnd">
                    {{!-- header follow if is not home page --}}
                    <a href="#" class="button-search--open button button--chromeless u-fontSizeLarge i-search"></a>

                    <a href="#" class="button-search--open u-relative button button--chromeless i-search u-fontSizeLarge u-hide-after-md"></a>
                    <a href="#" style="margin-right:-12px;" class="button-nav--toggle u-relative u-hide-after-md"><span></span><span></span><span></span></a>
                </div>

            </div>

        </div>
    </div>

    {{!-- Header Navigation --}}
    <nav class="mainMenu u-fontSizeSmaller u-sizeFullWidth u-hide-before-md">
        <div class="u-maxWidth1040 u-container">
            <div class="nav u-headerColorLink">
                {{navigation}}
            </div>
        </div>
    </nav>

    {{!-- Side Nav for Mobile --}}
    {{>"sidenav"}}
</header>
