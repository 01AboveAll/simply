{{!-- Post Actions share and next post--}}
<div class="postActions is-visible">
    <div class="postActions-wrap u-container u-clear">
        <div class="u-floatLeft u-flex u-flexCenter">
            {{!-- Prev Post--}}
            {{#prev_post}}
            <div class="nextPost u-hide-before-lg">
                <a href="{{url}}" class="u-block">
                    <span class="u-block u-link u-contentTitle u-fontSizeSmaller u-lineHeight1">Prev article</span>
                    <h4 class="u-contentTitle u-fontSizeSmall u-noWrapWithEllipsis u-fontWeightBold">{{title}}</h4>
                </a>
            </div>

            <div class="separator u-hide-before-lg"></div>
            {{/prev_post}}

            {{!-- Share Count Book --}}
            <div class="share-box u-textAlignCenter" style="margin-right: 15px;">
                <span class="share-count u-block u-fontWeightBold u-contentTitle u-lineHeight1" data-url="{{url absolute="true"}}">0</span>
                <span class="share-label u-block u-textColorNormal u-contentTitle u-fontSize13 u-lineHeight1">SHARES</span>
            </div>

            <a href="#" class="button button--large button--chromeless button--dark u-fontSizeLarge">
                <i class="i-comments"></i>
                {{!-- Disqus Comments Count --}}
                <span class="disqus-comment-count u-fontSizeSmall simply-disqus" data-disqus-url="{{url absolute="true"}}">0</span>
                {{!-- Facebook Comments Counts --}}
                <span class="fb-comments-count u-fontSizeSmall simply-facebook" data-href="{{url absolute="true"}}">0</span>
            </a>

        </div>
        <div class="u-floatRight u-flex u-flexCenter">
            {{!-- post Share--}}
            <div class="postShare u-fontSize20 u-flex buttonSet">
                <a href="#" title="Share on Facebook" class="i-facebook button button--large button--chromeless c-facebook u-fontSizeLarge"></a>
                <a href="#" title="Share on Twitter" class="i-twitter button button--large button--chromeless c-twitter u-fontSizeLarge"></a>
                <a href="#" title="Share on whatsapp" class="i-whatsapp button button--large button--chromeless c-whatsapp u-fontSizeLarge u-hide-after-lg"></a>
                <a href="#" title="Share on Reddit" class="i-reddit button button--large button--chromeless c-reddit u-fontSizeLarge u-hide-before-lg"></a>
                <div class="fbSave with-tooltip u-relative button button--large button--chromeless c-facebook" data-tooltip="Save to Facebook">
                    <div class="fbSave-icon u-fontSizeLarge i-save--line"></div>
                    <div class="fbSave-dropdown u-absolute u-overflowHidden u-lineHeight1"><div class="fb-save" data-uri="{{url absolute="true"}}" data-size="large"></div></div>
                </div>
            </div>

            {{!-- next Post--}}
            {{#next_post}}
            <div class="separator u-hide-before-lg"></div>

            <div class="nextPost u-hide-before-lg">
                <a href="{{url}}" class="u-block">
                    <span class="u-block u-link u-contentTitle u-fontSizeSmaller u-lineHeight1">Next article</span>
                    <h4 class="u-contentTitle u-fontSizeSmall u-noWrapWithEllipsis u-fontWeightBold">{{title}}</h4>
                </a>
            </div>
            {{/next_post}}

        </div>

    </div>
</div>
