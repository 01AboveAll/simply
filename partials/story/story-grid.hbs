<article class="story relative mb-5 pb-5 border-b border-gray-100 md:border-0">
    <figure class="story-image relative border border-gray-300 bg-gray-200 block overflow-hidden">
        <a href="{{url}}" class="block">
            {{!-- Imagenes --}}
            {{#if feature_image}}
                <img class="story-img absolute u-image block blur-up lazyload"
                    src="{{img_url feature_image size="l"}}"
                    srcset="{{img_url feature_image size="xxs"}}"
                    data-srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w, {{img_url feature_image size="l"}} 1000w"
                    data-sizes="(max-width: 1000px) 400px, 600px"
                    alt="{{title}}"
                />
            {{/if}}
        </a>

        {{!-- Category --}}
        {{#if primary_tag}}{{#primary_tag}}
        <span class="absolute right-0 top-0">
            <a href="{{url}}" title="{{t "Go to"}} {{name}}" class="button is-x-small is-dark-blue mt-3 mr-3">
                {{name}}
            </a>
        </span>
        {{/primary_tag}}{{/if}}
    </figure>

    <div class="story-body pt-5 flexColumnTop">
        {{!-- Helper Date Time and Reading --}}
        {{!-- {{> "helper/helper-datetime" class="story-date u-marginBottom10 u-fontSize15 u-lineHeight1 u-textMuted"}} --}}

        <h2 class="story-title text-2xl font-sans text-title"><a href="{{url}}" class="block">{{title}}</a></h2>
        <p class="story-excerpt mb-5 font-serif text-xl leading-snug">
            <a href="{{url}}" class="block">{{excerpt words="30"}}</a>
        </p>

        {{!-- Author - Primary Tag - Datetime - Read time - partials/helper/helper-by-line.hbs --}}
        {{> "helper/helper-author-meta"}}

        {{!-- Read more --}}
        {{!-- <a href="{{url}}" class="link-more u-fontSize15 u-fontWeightMedium">{{t "Read more"}}</a> --}}
    </div>
</article>