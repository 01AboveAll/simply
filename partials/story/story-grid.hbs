<article class="story u-relative">
    <figure class="story-image u-relative u-borderLighter u-bgColorGrayLight u-overflowHidden">
        {{!-- Imagenes --}}
        {{#if feature_image}}
            <img class="story-img u-absolute u-image u-block lazyload"
                src="{{img_url feature_image size="m"}}"
                srcset="{{img_url feature_image size="xxs"}}"
                data-srcset="{{img_url feature_image size="s"}} 300w,{{img_url feature_image size="m"}} 600w"
                data-sizes="(max-width: 1000px) 400px, 600px"
                alt="{{title}}"
            />
        {{else}}
            <div class="u-absolute0 u-block u-bgCover not-image"></div>
        {{/if}}

        {{!-- icon star if is featured post --}}
        {{#if featured}}<span class="story-icon-featured u-absolute u-textColorWhite i-star-line"></span>{{/if}}
    </figure>
    <section class="story-body u-paddingTop15">
        <h2 class="story-title u-contentTitle u-fontSize22 u-lineHeight1"><a href="{{url}}">{{title}}</a></h2>
        <p class="story-excerpt u-fontSizeSmall u-marginBottom20">{{excerpt words="12"}}</p>

        {{!-- Author Meta --}}
        <div class="u-flexCenter u-fontSize15">
            {{#primary_author}}
            <span class="u-relative avatar-image" style="margin-right:5px">
                <img class="u-absolute u-image u-block u-round lazyload" data-src="{{#if profile_image}}{{img_url profile_image size="xxs"}}{{else}}{{asset "images/avatar.png"}}{{/if}}" alt="{{name}}">
            </span>
            <a href="{{url}}" class="link--underline u-textColorDarker u-relative zindex4" style="margin-right:5px">{{name}}</a>
            {{/primary_author}}
            <time class="datetime u-textCapitalize u-textColorNormal" datetime="{{date format=" YYYY-MM-DD "}}">{{date published_at format="MMMM DD, YYYY"}}</time>
        </div>
    </section>
    {{!-- link --}}
    <a href="{{url}}" class="u-absolute0 zindex3"></a>
</article>
