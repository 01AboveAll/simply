<div class="flex relative godo-tracking {{class}}"
    data-event-category="Article"
    data-event-action="{{storyTitle}}"
    data-event-label="{{url absolute="true"}}"
    data-event-non-interaction="true">

    <a href="{{url}}" class="prev-next-image-link relative w-4/12 bg-gray-200 flex-none border border-gray-100" aria-label="{{title}}">
    {{#if feature_image}}
        <img class="absolute u-image blur-up lazyload" data-src="{{img_url feature_image size="s"}}" alt="{{title}}"/>
    {{/if}}
    </a>

    <div class="prev-next-body pl-6 flex-auto">
        <div class="text-sm leading-none text-gray-500 mb-2">{{storyTitle}}</div>
        <h2 class="prev-next-title text-title mb-2 text-xl md:text-22"><a href="{{url}}" class="relative z-3">{{title}}</a></h2>
        <p class="prev-next-excerpt text-base text-gray-500 lineClamp-2 leading-snug">{{excerpt words="25"}}</p>
    </div>

    <a href="{{url}}" aria-label="{{title}}" class="absolute inset-0 z-2"></a>
</div>