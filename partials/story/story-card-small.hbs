<div class="storySmall overflow-hidden flex flex-col relative mb-8 {{#is "post"}}godo-tracking{{/is}}"
    {{#is "post"}}data-event-category="Article"
    data-event-action="Related Posts"
    data-event-label="{{url absolute="true"}}"
    data-event-non-interaction="true"{{/is}}>

    {{#if feature_image}}
    <a href="{{url}}" class="storySmall-img-link h-40 relative overflow-hidden w-full block">
        <img class="storySmall-img absolute u-image block blur-up lazyload"
            src="{{img_url feature_image size="s"}}"
            srcset="{{img_url feature_image size="xxs"}}"
            data-srcset="{{img_url feature_image size="s"}} 300w,{{img_url feature_image size="m"}} 600w"
            data-sizes="(max-width: 1000px) 400px, 600px"
            alt="{{title}}"
        />
    </a>
    {{/if}}

    <div class="storySmall-inner p-4 flex flex-col justify-between flex-grow">
        <div class="storySmall-body">
            {{#if feature_image}}
                <h2 class="text-22 lineClamp-2 text-title mb-2"><a href="{{url}}">{{title}}</a></h2>
            {{else}}
                <h2 class="text-22 text-title"><a href="{{url}}">{{title}}</a></h2>
                <p class="pt-4 mb-2">{{excerpt words="20"}}</p>
            {{/if}}
        </div>

        {{!-- Datetime - ReadingTime - partials/helper/helper-datetime.hbs --}}
        {{> "helper/helper-datetime"}}
    </div>

    {{!-- Link --}}
    <a href="{{url}}" class="absolute inset-0 z-3" aria-label="{{title}}"></a>
</div>