{{#if tags}}
<div class="post-tags buttons mt-8">
    {{#foreach tags}}
    <a href="{{url absolute="true"}}"
        title="{{name}}"
        class="button is-tags godo-tracking"
        data-event-category="Article"
        data-event-action="Tags"
        data-event-label="{{name}}"
        data-event-non-interaction="true">
        {{name}}
    </a>
    {{/foreach}}
</div>
{{/if}}
