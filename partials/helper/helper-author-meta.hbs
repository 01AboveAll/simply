<div class="hh flex items-center relative z-4 flex-auto">
    <ul class="hh-author flex flex-wrap flex-none mr-3">
        {{#foreach authors}}
        <li class="hh-author-item realtive">
            <a href="{{url}}" title="{{t "Go to the profile of"}} {{name}}" class="relative block avatar {{#is "post"}}is-45x45{{/is}}">
                <img
                    class="absolute u-image block rounded-full"
                    src="{{#if profile_image}}{{img_url profile_image size="xs"}}{{else}}{{asset "images/avatar.png"}}{{/if}}"
                    alt="{{t "Go to the profile of "}} {{name}}"
                />
            </a>
        </li>
        {{/foreach}}
    </ul>

    <div class="hh-right flex-auto overflow-hidden">
        <div class="hh-author-name text-sm noWrapWithEllipsis">
        {{#has author="count:>2"}}{{t "Multiple authors"}}{{else}}{{authors}}{{/has}}
        </div>

        {{> "helper/helper-datetime"}}
    </div>
</div>