{{!-- Layout --}}
{{!< default}}

{{#post}}

{{!-- Class for <body> --}}
{{#contentFor "special_body_class"}}is-article{{/contentFor}}

<article class="post mb-10 pt-8 lg:pt-10 relative">
    {{!-- Article Header - partials/article/article-header.hbs --}}
    {{> "article/article-header"}}

    {{!-- Post Image - partials/article/article-featured-image.hbs --}}
    {{> "article/article-featured-image" image=feature_image class="block mx-auto max-w-740 mt-12 px-4"}}

    <div class="post-wrap max-w-1100 relative mx-auto">
        {{!-- All Content --}}
        <div id="post-body" class="post-body px-4 mx-auto max-w-740 relative">{{content}}</div>
    </div>

    {{!-- [tags, prev_post, next_post] - partials/article/article-footer.hbs --}}
    {{> "article/article-footer"}}
</article>

{{/post}}

{{!-- Article related - partials/article/article-related.hbs --}}
{{> "article/article-related"}}

{{#post}}
    {{!-- post Commets --}}
    {{> "article/article-comments"}}

    {{!-- Share Article - Facebook Twitter Whatsapp --}}
    {{!-- {{> "article/article-share-sticky"}} --}}
{{/post}}